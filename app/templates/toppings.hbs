<div class="left">
  {{#link-to 'toppings.new' tagName="button"}}New Topping{{/link-to}}
  <hr>

  <h3>Existing Toppings</h3>
  {{#each model as |topping|}}
    {{#link-to 'toppings.topping' topping.id tagName="div" class="item"}}
      {{topping.name}} <br>
      {{topping.cost}}
    {{/link-to}}
  {{else}}
    <div class="item">
      No toppings found
    </div>
  {{/each}}
</div>

<div class="right">
  {{outlet}}
</div>


